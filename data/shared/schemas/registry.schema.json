  "title": "Registry Schema (formats/enums)",
  "type": "object",
  "required": ["version","formats","enums","completion_codes","global_parse_hints"],
  "properties": {
    "version": { "type": "string" },
    "formats": { "type": "object" },
    "enums": { "type": "object" },
    "completion_codes": { "type": "array", "items": { "type": "string" } },
    "error_codes": { "type": "array", "items": { "type": "object" } },
    "global_parse_hints": { "type": "object" }
  },
  "additionalProperties": false
}
