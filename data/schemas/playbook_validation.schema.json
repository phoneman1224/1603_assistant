{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TL1 Playbooks Schema",
  "description": "Validation schema for playbooks.json containing automation sequences",
  "type": "object",
  "required": ["metadata", "playbooks"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["version", "lastUpdate", "totalPlaybooks"],
      "properties": {
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+$" },
        "lastUpdate": { "type": "string", "format": "date" },
        "totalPlaybooks": { "type": "integer", "minimum": 1 }
      }
    },
    "playbooks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "category", "commands", "parameters"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-zA-Z0-9_-]+$" },
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "category": { 
            "type": "string", 
            "enum": ["Health Check", "Troubleshooting", "Provisioning", "Maintenance", "Monitoring", "Cross Connect"]
          },
          "commands": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["step", "command", "description"],
              "properties": {
                "step": { "type": "integer", "minimum": 1 },
                "command": { "type": "string", "minLength": 1 },
                "description": { "type": "string", "minLength": 1 },
                "delay": { "type": "integer", "minimum": 0 },
                "conditional": { "type": "string" },
                "onError": { 
                  "type": "string", 
                  "enum": ["continue", "stop", "retry", "skip"]
                }
              }
            },
            "minItems": 1
          },
          "parameters": {
            "type": "object",
            "patternProperties": {
              "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                "type": "object",
                "required": ["type", "description"],
                "properties": {
                  "type": { "type": "string", "enum": ["string", "integer", "boolean", "array"] },
                  "description": { "type": "string", "minLength": 1 },
                  "required": { "type": "boolean" },
                  "default": {},
                  "enum": { "type": "array" }
                }
              }
            }
          },
          "platforms": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "estimatedTime": { "type": "string" },
          "prerequisites": {
            "type": "array",
            "items": { "type": "string" }
          },
          "postConditions": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}