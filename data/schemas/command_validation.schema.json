{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TL1 Command Database Schema",
  "description": "Validation schema for commands.json containing TL1 command definitions",
  "type": "object",
  "required": ["metadata", "categories", "commands"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["version", "lastUpdate", "totalCommands", "platforms"],
      "properties": {
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+$" },
        "lastUpdate": { "type": "string", "format": "date" },
        "totalCommands": { "type": "integer", "minimum": 1 },
        "platforms": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },
    "categories": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "syntax", "description", "category", "platforms", "paramSchema"],
        "properties": {
          "id": { "type": "string", "pattern": "^[A-Z0-9_-]+$" },
          "name": { "type": "string", "minLength": 1 },
          "syntax": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "category": { "type": "string", "minLength": 1 },
          "platforms": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "paramSchema": {
            "type": "object",
            "required": ["type", "properties"],
            "properties": {
              "type": { "const": "object" },
              "properties": {
                "type": "object",
                "patternProperties": {
                  "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "type": "object",
                    "required": ["type", "description"],
                    "properties": {
                      "type": { "type": "string", "enum": ["string", "integer", "boolean", "array"] },
                      "description": { "type": "string", "minLength": 1 },
                      "required": { "type": "boolean" },
                      "default": {},
                      "enum": { "type": "array" },
                      "pattern": { "type": "string" },
                      "minimum": { "type": "number" },
                      "maximum": { "type": "number" }
                    }
                  }
                }
              },
              "required": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["description", "command"],
              "properties": {
                "description": { "type": "string", "minLength": 1 },
                "command": { "type": "string", "minLength": 1 },
                "response": { "type": "string" }
              }
            }
          },
          "notes": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}