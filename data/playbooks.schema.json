{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TL1 Playbooks Database Schema",
  "description": "Schema for validating the TL1 playbooks.json file",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+$"
        },
        "lastUpdate": {
          "type": "string",
          "format": "date"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["version", "lastUpdate", "description"],
      "additionalProperties": false
    },
    "troubleshooting": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "minimum": 1
                },
                "name": {
                  "type": "string"
                },
                "command": {
                  "type": "string",
                  "pattern": "^[A-Z0-9-]+$"
                },
                "params": {
                  "type": "object",
                  "properties": {
                    "TID": {
                      "type": "string"
                    },
                    "AID": {
                      "type": "string"
                    },
                    "CTAG": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "expectedResponse": {
                  "type": "string",
                  "enum": ["COMPLD", "DENY", "PRTL"]
                },
                "onError": {
                  "type": "string",
                  "enum": ["abort", "continue", "retry"]
                },
                "retryCount": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 5
                },
                "delay": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 60
                }
              },
              "required": ["id", "name", "command", "params", "expectedResponse", "onError"],
              "additionalProperties": false
            },
            "minItems": 1
          }
        },
        "required": ["id", "name", "description", "steps"],
        "additionalProperties": false
      }
    },
    "provisioning": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": ["cross-connect", "circuit", "service", "protection"]
          },
          "inputs": {
            "type": "object",
            "patternProperties": {
              "^[a-zA-Z0-9_]+$": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["string", "integer", "boolean", "select"]
                  },
                  "required": {
                    "type": "boolean"
                  },
                  "description": {
                    "type": "string"
                  },
                  "options": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "default": {
                    "type": ["string", "integer", "boolean"]
                  }
                },
                "required": ["type", "required", "description"],
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "minimum": 1
                },
                "name": {
                  "type": "string"
                },
                "command": {
                  "type": "string",
                  "pattern": "^[A-Z0-9-]+$"
                },
                "params": {
                  "type": "object",
                  "properties": {
                    "TID": {
                      "type": "string"
                    },
                    "AID": {
                      "type": "string"
                    },
                    "CTAG": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "expectedResponse": {
                  "type": "string",
                  "enum": ["COMPLD", "DENY", "PRTL"]
                },
                "onError": {
                  "type": "string",
                  "enum": ["abort", "continue", "retry"]
                },
                "rollback": {
                  "type": "object",
                  "properties": {
                    "command": {
                      "type": "string"
                    },
                    "params": {
                      "type": "object"
                    }
                  }
                }
              },
              "required": ["id", "name", "command", "params", "expectedResponse", "onError"],
              "additionalProperties": false
            },
            "minItems": 1
          }
        },
        "required": ["id", "name", "description", "category", "steps"],
        "additionalProperties": false
      }
    }
  },
  "required": ["metadata", "troubleshooting", "provisioning"],
  "additionalProperties": false
}