  "playbooks": [
    {
      "id": "System_Health_Check",
      "name": "Complete System Health Check",
      "description": "Comprehensive health assessment including alarms, performance, and configuration verification",
      "category": "Health Check",
      "estimatedTime": "2-3 minutes",
      "platforms": ["1603_SM", "16034_SMX"],
      "prerequisites": [
        "Equipment must be online and accessible",
        "Valid TID configured"
      ],
      "commands": [
        {
          "step": 1,
          "command": "RTRV-HDR::{{TID}}:{{CTAG}}",
          "description": "Get system information and verify connectivity"
        },
        {
          "step": 2,
          "command": "RTRV-ALM-ALL::{{TID}}:{{CTAG+1}}:{{ALMLEV}}",
          "description": "Check for any active alarms"
        },
        {
          "step": 3,
          "command": "RTRV-PM-ALL::{{TID}}:{{CTAG+2}}",
          "description": "Retrieve current performance metrics"
        }
      ],
      "parameters": {
        "TID": {
          "type": "string",
          "description": "Equipment target identifier",
          "required": true
        },
        "CTAG": {
          "type": "string",
          "description": "Starting correlation tag number",
          "required": true
        },
        "ALMLEV": {
          "type": "string",
          "description": "Alarm severity level filter",
          "required": false
        }
      },
      "postConditions": [
        "System connectivity verified",
        "Alarm status assessed",
        "Performance baseline established"
      ]
    },
    {
      "id": "Port_Connectivity_Test",
      "name": "Port Connectivity Test",
      "description": "Comprehensive port diagnostic - checks alarms, runs loopback tests, and verifies connectivity",
      "category": "Troubleshooting",
      "estimatedTime": "60 seconds",
      "platforms": ["1603_SM", "16034_SMX"],
      "commands": [
        {
          "step": 1,
          "command": "RTRV-ALM::{{TID}}:{{CTAG}}:{{AID}}",
          "description": "Check for alarms on specific port"
        },
        {
          "step": 2,
          "command": "TST-LPB::{{TID}}:{{CTAG}}:{{AID}}",
          "description": "Run facility-level loopback test"
        },
        {
          "step": 3,
          "command": "RLS-LPB::{{TID}}:{{CTAG}}:{{AID}}",
          "description": "Release loopback test"
        }
      ],
      "parameters": {
        "TID": {
          "type": "string",
          "description": "Equipment target identifier",
          "required": true
        },
        "CTAG": {
          "type": "string",
          "description": "Correlation tag number",
          "required": true
        },
        "AID": {
          "type": "string",
          "description": "Access Identifier (port/facility)",
          "required": true
        }
      }
    },
    {
